@import "../../_common/style/normalize.styl"
@import "./animation.styl"

.topbar
    position: fixed
    top: 0
    width: 100%
    height: 400px
    background: rgba(0,0,0,.8)
    border-bottom: 6px solid #000
    z-index: 100

.welcome
    position: fixed
    width: 100%
    height: 100%

    &.cover
        height: 400px
        overflow: hidden
        z-index: 99
        
        .title
            transform: translateZ(0)
            color: #000

    .title
        position: fixed
        top: 50%
        left: 50%
        width: 1160px
        height: 110px
        margin-left: -580px
        margin-top: -55px
        font-weight: bold
        font-size: 96px
        text-align: center
        color: #39e
    
    .text
        float: left
        opacity: 0
        animation-timing-function: ease-in-out
        animation-fill-mode: forwards
        animation-duration: 12s

        &.a1
            animation-name: welcome-title-move-1
        &.a2
            animation-name: welcome-title-move-2
        &.a3
            animation-name: welcome-title-move-3
        &.a4
            animation-name: welcome-title-move-4
        
        $times = 2

        &.x1
            animation-delay: .12s * $times
        &.x2
            animation-delay: .9s * $times
        &.x3
            animation-delay: .17s * $times
        &.x4
            animation-delay: .16s * $times
        &.x5
            animation-delay: .4s * $times
        &.x6
            animation-delay: .13s * $times
        &.x7
            animation-delay: .10s * $times
        &.x8
            animation-delay: .8s * $times
        &.x9
            animation-delay: .15s * $times
        &.x10
            animation-delay: .18s * $times
        &.x11
            animation-delay: .5s * $times
        &.x12
            animation-delay: .7s * $times
        &.x13
            animation-delay: .14s * $times
        &.x14
            animation-delay: .4s * $times
        &.x15
            animation-delay: .3s * $times
        &.x16
            animation-delay: .6s * $times
        &.x17
            animation-delay: .2s * $times
        &.x18
            animation-delay: .11s * $times