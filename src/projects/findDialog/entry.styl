@import "../../_common/style/normalize.styl"

.live-textarea
	position: relative
	width: 600px
	height: 400px
	margin: 100px auto 0
	border-radius: 20px
	overflow: hidden
	box-shadow: 0 0 18px #ccc
	background: #fff
		
	circle, text
		cursor: pointer
		
	textarea
		position: absolute
		z-index: 2
		padding: 40px 40px 0 40px
		width: 100%
		height: 300px
		background: none
		border: none
		box-sizing: border-box
		font-size: 36px
		color: #6c6c6c
		font-family: "Microsoft Yahei", "Microsoft Sans Serif"
		transition: .2s ease
		resize: none
		
		&:focus
			outline: none
			
		&.multiple
			font-size: 24px

	.svg-btn
		transition: .3s ease

	.button
		position: relative
	
	.loading
		display: none
		position: absolute
		z-index: 4
		left: 70px
		bottom: 30px
		width: 30px
		height: 30px
		border-radius: 50%
		border-style: solid
		border-color: #fff #fff #fff #f66
		border-width: 2px
		animation: rotate 1s infinite
	
	@keyframes rotate
		0%
			transform: rotate(0deg)			
		100%
			transform: rotate(360deg)